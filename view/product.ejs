                            <p id="fuel"><%= info.fuel%></p>
                            <p id="transmission"><%= info.transmission%></p>
                            <p id="steering"><%= info.steering%></p>
                            <p id="ABS"><%= info.ABS%></p>
                            <p id="airbags"><%= info.airbags%></p>
                            <p id="windows"><%= info.windows%></p>
